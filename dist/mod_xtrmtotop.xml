<?xml version="1.0" encoding="UTF-8" ?>
<extension type="module" version="4.0" method="upgrade" client="site">
	<name>Module ☆ ToTop</name>
	<element>mod_xtrmtotop</element>
	<version>4.0.00.00.1441736</version>
	<creationDate>24 May. 2019</creationDate>
	<author>shim-sao</author>
	<authorName>shim-sao</authorName>
	<authorEmail>contact@xtrmaddons.com</authorEmail>
	<authorUrl>https://github.com/shim-sao/</authorUrl>
	<packager>xtrmaddons.com</packager>
	<packagerurl>https://www.xtrmaddons.com/</packagerurl>
	<copyright>Copyright 2015-2019 XtrmAddons.com. All rights reserved.</copyright>
	<license>https://www.gnu.org/licenses/gpl-3.0.html GNU/GPL</license>
	<license>https://www.gnu.org/licenses/gpl-3.0.html GNU/GPL</license>
	<description>MOD_XTRMTOTOP_XML_DESCRIPTION</description>

	<!-- Set module namespace -->
	<namespace>Joomla\Module\XtrmToTop</namespace>

	<!-- Runs on install/uninstall/update -->
	<scriptfile>script.php</scriptfile>

	<!-- Main File Copy -->
	<files>
		<filename module="mod_xtrmtotop">mod_xtrmtotop.php</filename>
		<filename>mod_xtrmtotop.xml</filename>
	</files>

	<!-- Language File Copy -->
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.mod_xtrmtotop.ini</language>
		<language tag="en-GB">en-GB/en-GB.mod_xtrmtotop.sys.ini</language>
		<language tag="fr-FR">fr-FR/fr-FR.mod_xtrmtotop.ini</language>
		<language tag="fr-FR">fr-FR/fr-FR.mod_xtrmtotop.sys.ini</language>
	</languages>

	<!-- Media files -->
	<media folder="media" destination="mod_xtrmtotop">
		<folder>image</folder>
		<folder>js</folder>
	</media>

	<!-- Configuration of the module -->
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="useOptions"
					type="radio" default="1"
					label="MOD_XTRMTOTOP_FIELD_USE_OPTIONS_LABEL"
					description="MOD_XTRMTOTOP_FIELD_USE_OPTIONS_DESC"
					filter="intval"
					size="1"
					labelclass="control-label"
					class="btn-group">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field
					name="right"
					type="text"
					default="25px"
					label="MOD_XTRMTOTOP_FIELD_RIGHT_LABEL"
					description="MOD_XTRMTOTOP_FIELD_RIGHT_DESC"
					class="inputbox" />

				<field
					name="bottom"
					type="text"
					default="25px"
					label="MOD_XTRMTOTOP_FIELD_BOTTOM_LABEL"
					description="MOD_XTRMTOTOP_FIELD_BOTTOM_DESC"
					class="inputbox" />

				<field
					name="width"
					type="text"
					default="80px"
					label="MOD_XTRMTOTOP_FIELD_WIDTH_LABEL"
					description="MOD_XTRMTOTOP_FIELD_WIDTH_DESC"
					class="inputbox" />

				<field
					name="height"
					type="text"
					default="80px"
					label="MOD_XTRMTOTOP_FIELD_HEIGHT_LABEL"
					description="MOD_XTRMTOTOP_FIELD_HEIGHT_DESC"
					class="inputbox" />

				<field
					name="border"
					type="text"
					default="1px solid #ccc"
					label="MOD_XTRMTOTOP_FIELD_BORDER_LABEL"
					description="MOD_XTRMTOTOP_FIELD_BORDER_DESC"
					class="inputbox" />

				<field
					name="borderRadius"
					type="text"
					default="8px"
					label="MOD_XTRMTOTOP_FIELD_BORDER_RADIUS_LABEL"
					description="MOD_XTRMTOTOP_FIELD_BORDER_RADIUS_DESC"
					class="inputbox" />

				<field
					name="background"
					type="text"
					default="#666"
					label="MOD_XTRMTOTOP_FIELD_BACKGROUND_LABEL"
					description="MOD_XTRMTOTOP_FIELD_BACKGROUND_DESC"
					class="inputbox" />

				<field
					name="backgroundImage"
					type="text"
					default="/media/mod_xtrmtotop/image/scroll-to-top.png"
					label="MOD_XTRMTOTOP_FIELD_BACKGROUND_IMAGE_LABEL"
					description="MOD_XTRMTOTOP_FIELD_BACKGROUND_IMAGE_DESC"
					class="inputbox" />

				<field
					name="opacity"
					type="text"
					default=".9"
					label="MOD_XTRMTOTOP_FIELD_OPACITY_LABEL"
					description="MOD_XTRMTOTOP_FIELD_OPACITY_DESC"
					class="inputbox" />
			</fieldset>
		</fields>
	</config>
	
  <!-- Extension Update Specification -->
	<updateservers>
		<server name="XtrmAddons - Module ☆ ToTop Update" priority="1" type="extension">https://github.joomla.mod-xtrmtotop.xtrmaddons.com/download/release/update-4.0.xml</server>
	</updateservers>
</extension>